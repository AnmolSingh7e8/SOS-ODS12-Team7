  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
</head>
<body>

  <header>
    <h1>Recursos ODS 12</h1>
  </header>

  <nav>
    <ul>
      <li><a href="/">Inicio</a></li>
      <li><a href="/info">Investigación</a></li>
